<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Planes - CDF Entrenamiento Elite</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/design-system.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9fafb;
            min-height: 100vh;
        }
        .material-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }
        .material-card:hover {
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            transform: translateY(-2px);
        }
        .plan-card {
            padding: 2rem;
            text-align: center;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }
        .plan-card:hover {
            border-color: #667eea;
        }
        .plan-price {
            font-size: 3rem;
            font-weight: bold;
            color: #667eea;
            margin: 1rem 0;
        }
        .plan-duration {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            display: inline-block;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <!-- Navigation CDF -->
    <nav class="cdf-header">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="cdf-logo">
                        <img src="https://i.ibb.co/9kcT37yD/unnamed-1.png" alt="CDF Logo" style="height: 35px; width: auto; margin-right: 8px;">
                    </a>
                    <span class="ml-2 text-sm text-gray-300">Entrenamiento Elite</span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-gray-300 mx-2">|</span>
                    <a href="/alumnos" class="cdf-nav-item">
                        <i class="fas fa-users"></i>
                        Alumnos
                    </a>
                    <a href="/planes" class="cdf-nav-item active">
                        <i class="fas fa-clipboard-list"></i>
                        Planes
                    </a>
                    <a href="/colaboradores" class="cdf-nav-item">
                        <i class="fas fa-user-tie"></i>
                        Colaboradores
                    </a>
                    <a href="/logout" class="cdf-btn cdf-btn-primary cdf-btn-sm">
                        Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Gestión de Planes</h1>
                <p class="mt-2 text-gray-600">Administra los planes de entrenamiento disponibles</p>
            </div>
            <a href="/planes/add" class="cdf-btn cdf-btn-primary">
                <i class="fas fa-plus"></i>
                Agregar Plan
            </a>
        </div>

        <!-- Plans Grid -->
        <div id="planesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Los planes se cargarán aquí -->
        </div>

        <!-- No Plans Message -->
        <div id="noPlanes" class="hidden text-center py-12">
            <div class="material-card p-12">
                <i class="fas fa-clipboard-list text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay planes disponibles</h3>
                <p class="text-gray-600 mb-6">Comienza agregando tu primer plan de entrenamiento</p>
                <a href="/planes/add" class="cdf-btn cdf-btn-primary">
                    <i class="fas fa-plus"></i>
                    Crear Primer Plan
                </a>
            </div>
        </div>
    </main>

    <!-- Footer CDF -->
    <footer class="cdf-footer">
        <div class="cdf-footer-content">
            <div class="cdf-footer-left">
                Desarrollado por Alan Stefanov, Software Engineer.
            </div>
            <div class="text-center">
                <a href="/dashboard" class="cdf-footer-logo">
                    <img src="https://i.ibb.co/9kcT37yD/unnamed-1.png" alt="CDF Logo" style="height: 24px; width: auto;">
                </a>
            </div>
            <div class="cdf-footer-right">
                @2025 CDF Entrenamiento Elite. Todos los derechos reservados
            </div>
        </div>
    </footer>

    <script>
        // Cargar planes
        async function loadPlanes() {
            try {
                const response = await fetch('/planes/api');
                const planes = await response.json();

                const grid = document.getElementById('planesGrid');
                const noPlanes = document.getElementById('noPlanes');

                if (planes.length === 0) {
                    grid.classList.add('hidden');
                    noPlanes.classList.remove('hidden');
                    return;
                }

                noPlanes.classList.add('hidden');
                grid.classList.remove('hidden');

                grid.innerHTML = planes.map(plan => `
                    <div class="material-card plan-card">
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">${plan.nombre_plan}</h3>
                        <div class="plan-duration">${plan.duracion_dias} días</div>
                        <div class="plan-price">$${parseFloat(plan.precio).toLocaleString('es-AR')}</div>
                        <p class="text-gray-600 mb-6">${plan.descripcion || 'Sin descripción'}</p>
                        <div class="flex gap-2 justify-center">
                            <a href="/planes/edit/${plan.id}" class="cdf-btn cdf-btn-secondary">
                                <i class="fas fa-edit"></i>
                                Editar
                            </a>
                            <button onclick="deletePlan(${plan.id}, '${plan.nombre_plan}')" class="cdf-btn" style="background-color: #dc2626; color: white;">
                                <i class="fas fa-trash"></i>
                                Eliminar
                            </button>
                        </div>
                    </div>
                `).join('');

            } catch (error) {
                console.error('Error cargando planes:', error);
                document.getElementById('planesGrid').innerHTML = `
                    <div class="col-span-full text-center py-8">
                        <p class="text-red-600">Error al cargar los planes</p>
                    </div>
                `;
            }
        }

        async function deletePlan(id, nombre) {
            if (confirm(`¿Estás seguro de que quieres eliminar el plan "${nombre}"?`)) {
                try {
                    const response = await fetch(`/planes/${id}`, { method: 'DELETE' });
                    if (response.ok) {
                        loadPlanes(); // Recargar lista
                    } else {
                        alert('Error al eliminar el plan');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al eliminar el plan');
                }
            }
        }

        // Cargar al inicializar
        document.addEventListener('DOMContentLoaded', loadPlanes);
    </script>
</body>
</html>