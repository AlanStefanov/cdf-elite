<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .cdf-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        }
        .cdf-footer {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        }
        .cdf-logo {
            color: #ef4444;
            font-weight: 700;
            font-size: 1.5rem;
        }
        .cdf-button-primary {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .cdf-button-primary:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            transform: translateY(-1px);
            box-shadow: 0 8px 25px rgba(239, 68, 68, 0.3);
        }
        .cdf-button-secondary {
            background: transparent;
            color: #ef4444;
            border: 2px solid #ef4444;
            border-radius: 8px;
            padding: 10px 22px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .cdf-button-secondary:hover {
            background: #ef4444;
            color: white;
            transform: translateY(-1px);
        }
        .cdf-button-dark {
            background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .cdf-button-dark:hover {
            background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
            transform: translateY(-1px);
        }
        .cdf-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
        }
        .cdf-card:hover {
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            transform: translateY(-2px);
        }
        .stat-card {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }
        .nav-link {
            color: #d1d5db;
            transition: all 0.3s ease;
            padding: 8px 16px;
            border-radius: 6px;
        }
        .nav-link:hover {
            color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }
        .nav-link.active {
            color: #ef4444;
            background: rgba(239, 68, 68, 0.15);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="cdf-header shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-4">
                    <div class="cdf-logo flex items-center">
                        <i class="fas fa-dumbbell mr-2"></i>
                        CDF
                    </div>
                    <span class="text-white text-sm font-medium">Entrenamiento Elite</span>
                    <div class="flex items-center space-x-2 ml-6">
                        <i class="fas fa-database text-gray-400 text-sm"></i>
                        <span class="text-gray-300 text-sm">DB</span>
                    </div>
                </div>

                <nav class="flex items-center space-x-6">
                    <a href="/alumnos" class="nav-link">
                        <i class="fas fa-users mr-1"></i>Alumnos
                    </a>
                    <a href="/planes" class="nav-link">
                        <i class="fas fa-clipboard-list mr-1"></i>Planes
                    </a>
                    <a href="/colaboradores" class="nav-link">
                        <i class="fas fa-user-tie mr-1"></i>Colaboradores
                    </a>
                    <a href="/logout" class="cdf-button-primary ml-4">
                        Cerrar sesión
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 w-full">
        <!-- Page Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
            <p class="mt-2 text-gray-600">Resumen general del gimnasio CDF Entrenamiento Elite</p>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="cdf-card stat-card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Total Alumnos</p>
                        <p class="text-3xl font-bold text-gray-900"><%= stats.totalAlumnos %></p>
                    </div>
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-users text-blue-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="cdf-card stat-card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Membresías Activas</p>
                        <p class="text-3xl font-bold text-green-600"><%= stats.activos %></p>
                    </div>
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-check-circle text-green-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="cdf-card stat-card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Membresías Vencidas</p>
                        <p class="text-3xl font-bold text-red-600"><%= stats.vencidos %></p>
                    </div>
                    <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-times-circle text-red-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <div class="cdf-card stat-card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Por Vencer (7d)</p>
                        <p class="text-3xl font-bold text-yellow-600"><%= stats.porVencer %></p>
                    </div>
                    <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-exclamation-triangle text-yellow-600 text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Revenue Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="cdf-card p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900">Recaudación Mensual</h3>
                    <button onclick="toggleVisibility('monthly')" class="text-gray-500 hover:text-gray-700">
                        <i id="monthly-icon" class="fas fa-eye-slash"></i>
                    </button>
                </div>
                <div class="space-y-2">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Total recaudado</span>
                        <span id="monthly-amount" class="text-2xl font-bold text-green-600">$ ***</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Membresías cobradas</span>
                        <span class="text-sm font-medium text-gray-900"><%= stats.recaudacionMensual.length %></span>
                    </div>
                </div>
                <div class="hidden" id="monthly-real">$<%= stats.recaudacionMensual.reduce((sum, pago) => sum + parseFloat(pago.plan.precio), 0).toLocaleString('es-AR') %></div>
            </div>

            <div class="cdf-card p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900">Recaudación Hoy</h3>
                    <button onclick="toggleVisibility('daily')" class="text-gray-500 hover:text-gray-700">
                        <i id="daily-icon" class="fas fa-eye-slash"></i>
                    </button>
                </div>
                <div class="space-y-2">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Total del día</span>
                        <span id="daily-amount" class="text-2xl font-bold text-blue-600">$ ***</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">Pagos recibidos</span>
                        <span class="text-sm font-medium text-gray-900"><%= stats.recaudacionHoy.length %></span>
                    </div>
                </div>
                <div class="hidden" id="daily-real">$<%= stats.recaudacionHoy.reduce((sum, pago) => sum + parseFloat(pago.plan.precio), 0).toLocaleString('es-AR') %></div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <a href="/alumnos/add" class="cdf-card p-6 text-center hover:scale-105 transform transition-all">
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-user-plus text-red-600 text-2xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Nuevo Alumno</h3>
                <p class="text-gray-600">Agregar un nuevo miembro al gimnasio</p>
            </a>

            <a href="/planes/add" class="cdf-card p-6 text-center hover:scale-105 transform transition-all">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-plus-circle text-blue-600 text-2xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Nuevo Plan</h3>
                <p class="text-gray-600">Crear un nuevo plan de membresía</p>
            </a>

            <a href="/colaboradores/add" class="cdf-card p-6 text-center hover:scale-105 transform transition-all">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-user-tie text-green-600 text-2xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Nuevo Colaborador</h3>
                <p class="text-gray-600">Agregar miembro del equipo</p>
            </a>
        </div>

        <!-- Quick Stats -->
        <div class="cdf-card p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Membresías por Vencer (Próximos 7 días)</h3>
            <% if (membresiasPorVencer.length > 0) { %>
                <div class="space-y-3">
                    <% membresiasPorVencer.slice(0, 5).forEach(alumno => { %>
                        <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
                            <div>
                                <p class="font-medium text-gray-900"><%= alumno.nombre %> <%= alumno.apellido %></p>
                                <p class="text-sm text-gray-600">Plan: <%= alumno.plan ? alumno.plan.nombre_plan : 'Sin plan' %></p>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-medium text-yellow-600">Vence: <%= new Date(alumno.fecha_vencimiento_membresia).toLocaleDateString('es-ES') %></p>
                                <a href="/alumnos/edit/<%= alumno.id %>" class="text-xs text-blue-600 hover:text-blue-800">Renovar</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="text-gray-500 text-center py-4">No hay membresías por vencer en los próximos 7 días</p>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="cdf-footer mt-auto">
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <span class="text-gray-300 text-sm">Desarrollado por Alan Stefanov, Software Engineer</span>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="cdf-logo">CDF</div>
                    <span class="text-gray-300 text-sm">©2025 CDF Entrenamiento Elite. Todos los derechos reservados</span>
                </div>
            </div>
        </div>
    </footer>

    <script>
        function toggleVisibility(type) {
            const icon = document.getElementById(type + '-icon');
            const amount = document.getElementById(type + '-amount');
            const real = document.getElementById(type + '-real');

            if (icon.classList.contains('fa-eye-slash')) {
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                amount.textContent = real.textContent;
            } else {
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                amount.textContent = '$ ***';
            }
        }
    </script>
</body>
</html>