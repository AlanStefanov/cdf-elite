<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex flex-col">
    <!-- Header CDF -->
    <header class="cdf-header">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-center items-center h-16">
                <a href="#" class="cdf-logo">
                    <img src="/images/cdf-logo-header.png" alt="CDF Logo" class="h-12 w-auto">
                    <span class="cdf-logo-text">Entrenamiento Elite</span>
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <!-- Logo y título -->
            <div class="text-center">
                <div class="flex justify-center mb-8">
                    <div class="bg-white p-6 rounded-full shadow-lg">
                        <img src="/images/cdf-logo-new.png" alt="CDF Logo" class="h-16 w-auto">
                    </div>
                </div>
                <h2 class="text-4xl font-bold text-gray-900 mb-2">Bienvenido</h2>
                <p class="text-lg text-gray-600">Accede a tu cuenta de CDF</p>
            </div>

            <!-- Formulario de login -->
            <div class="material-card p-8">
                <!-- Flash Messages -->
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-error">
                        <span class="material-icons text-red-500">error</span>
                        <%= error %>
                    </div>
                <% } %>
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success">
                        <span class="material-icons text-green-500">check_circle</span>
                        <%= success %>
                    </div>
                <% } %>

                <form action="/login" method="POST" class="space-y-6">
                    <div class="space-y-2">
                        <label for="username" class="block text-sm font-semibold text-gray-700">
                            <span class="material-icons inline-block text-lg mr-2 align-middle">person</span>
                            Usuario
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            required 
                            class="cdf-input"
                            placeholder="Ingresa tu usuario"
                            autocomplete="username"
                        >
                    </div>

                    <div class="space-y-2">
                        <label for="password" class="block text-sm font-semibold text-gray-700">
                            <span class="material-icons inline-block text-lg mr-2 align-middle">lock</span>
                            Contraseña
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            required 
                            class="cdf-input"
                            placeholder="Ingresa tu contraseña"
                            autocomplete="current-password"
                        >
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="material-button w-full flex items-center justify-center gap-2">
                            <span class="material-icons">login</span>
                            INGRESAR AL SISTEMA
                        </button>
                    </div>
                </form>

                <!-- Info adicional -->
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <p class="text-center text-sm text-gray-500">
                        <span class="material-icons inline-block text-sm mr-1 align-middle">security</span>
                        Acceso seguro al sistema CDF
                    </p>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer CDF -->
    <footer class="cdf-footer">
        <div class="cdf-footer-content">
            <div class="cdf-footer-left">
                © 2025 CDF Entrenamiento Elite
            </div>
            <div class="flex justify-center">
                <a href="#" class="cdf-footer-logo">
                    <img src="/images/cdf-logo-header.png" alt="CDF Logo" class="h-8 w-auto">
                </a>
            </div>
            <div class="cdf-footer-right">
                Desarrollado por Alan Stefanov
            </div>
        </div>
    </footer>
</body>
</html>