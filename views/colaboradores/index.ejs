<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Colaboradores - CDF Entrenamiento Elite</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/design-system.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f9fafb;
            min-height: 100vh;
        }
        .material-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }
        .material-card:hover {
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }
        .colaborador-card {
            padding: 1.5rem;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }
        .colaborador-card:hover {
            border-color: #667eea;
            transform: translateY(-2px);
        }
        .colaborador-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            margin: 0 auto 1rem;
        }
        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }
        .status-activo {
            background-color: #dcfce7;
            color: #166534;
        }
        .status-inactivo {
            background-color: #fef2f2;
            color: #dc2626;
        }
    </style>
</head>
<body>
    <!-- Navigation CDF -->
    <nav class="cdf-header">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/dashboard" class="cdf-logo">
                        <img src="https://i.ibb.co/9kcT37yD/unnamed-1.png" alt="CDF Logo" style="height: 35px; width: auto; margin-right: 8px;">
                    </a>
                    <span class="ml-2 text-sm text-gray-300">Entrenamiento Elite</span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="text-gray-300 mx-2">|</span>
                    <a href="/alumnos" class="cdf-nav-item">
                        <i class="fas fa-users"></i>
                        Alumnos
                    </a>
                    <a href="/planes" class="cdf-nav-item">
                        <i class="fas fa-clipboard-list"></i>
                        Planes
                    </a>
                    <a href="/colaboradores" class="cdf-nav-item active">
                        <i class="fas fa-user-tie"></i>
                        Colaboradores
                    </a>
                    <a href="/logout" class="cdf-btn cdf-btn-primary cdf-btn-sm">
                        Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Gestión de Colaboradores</h1>
                <p class="mt-2 text-gray-600">Administra el equipo de trabajo del gimnasio</p>
            </div>
            <a href="/colaboradores/add" class="cdf-btn cdf-btn-primary">
                <i class="fas fa-plus"></i>
                Agregar Colaborador
            </a>
        </div>

        <!-- Colaboradores Grid -->
        <div id="colaboradoresGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Los colaboradores se cargarán aquí -->
        </div>

        <!-- No Colaboradores Message -->
        <div id="noColaboradores" class="hidden text-center py-12">
            <div class="material-card p-12">
                <i class="fas fa-user-tie text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">No hay colaboradores registrados</h3>
                <p class="text-gray-600 mb-6">Comienza agregando tu primer colaborador</p>
                <a href="/colaboradores/add" class="cdf-btn cdf-btn-primary">
                    <i class="fas fa-plus"></i>
                    Agregar Primer Colaborador
                </a>
            </div>
        </div>
    </main>

    <!-- Footer CDF -->
    <footer class="cdf-footer">
        <div class="cdf-footer-content">
            <div class="cdf-footer-left">
                Desarrollado por Alan Stefanov, Software Engineer.
            </div>
            <div class="text-center">
                <a href="/dashboard" class="cdf-footer-logo">
                    <img src="https://i.ibb.co/9kcT37yD/unnamed-1.png" alt="CDF Logo" style="height: 24px; width: auto;">
                </a>
            </div>
            <div class="cdf-footer-right">
                @2025 CDF Entrenamiento Elite. Todos los derechos reservados
            </div>
        </div>
    </footer>

    <script>
        // Cargar colaboradores
        async function loadColaboradores() {
            try {
                const response = await fetch('/colaboradores/api');
                const colaboradores = await response.json();

                const grid = document.getElementById('colaboradoresGrid');
                const noColaboradores = document.getElementById('noColaboradores');

                if (colaboradores.length === 0) {
                    grid.classList.add('hidden');
                    noColaboradores.classList.remove('hidden');
                    return;
                }

                noColaboradores.classList.add('hidden');
                grid.classList.remove('hidden');

                grid.innerHTML = colaboradores.map(colaborador => {
                    const statusClass = colaborador.estado === 'Activo' ? 'status-activo' : 'status-inactivo';
                    const iniciales = (colaborador.nombre.charAt(0) + colaborador.apellido.charAt(0)).toUpperCase();

                    return `
                        <div class="material-card colaborador-card text-center">
                            <div class="colaborador-avatar">
                                ${iniciales}
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">${colaborador.nombre} ${colaborador.apellido}</h3>
                            <p class="text-gray-600 mb-2">${colaborador.puesto}</p>
                            <p class="text-sm text-gray-500 mb-3">${colaborador.email}</p>
                            <div class="status-badge ${statusClass} mb-4">
                                ${colaborador.estado}
                            </div>
                            <div class="flex gap-2 justify-center">
                                <a href="/colaboradores/edit/${colaborador.id}" class="cdf-btn cdf-btn-secondary">
                                    <i class="fas fa-edit"></i>
                                    Editar
                                </a>
                                <button onclick="deleteColaborador(${colaborador.id}, '${colaborador.nombre} ${colaborador.apellido}')" class="cdf-btn" style="background-color: #dc2626; color: white;">
                                    <i class="fas fa-trash"></i>
                                    Eliminar
                                </button>
                            </div>
                        </div>
                    `;
                }).join('');

            } catch (error) {
                console.error('Error cargando colaboradores:', error);
                document.getElementById('colaboradoresGrid').innerHTML = `
                    <div class="col-span-full text-center py-8">
                        <p class="text-red-600">Error al cargar los colaboradores</p>
                    </div>
                `;
            }
        }

        async function deleteColaborador(id, nombre) {
            if (confirm(`¿Estás seguro de que quieres eliminar al colaborador "${nombre}"?`)) {
                try {
                    const response = await fetch(`/colaboradores/${id}`, { method: 'DELETE' });
                    if (response.ok) {
                        loadColaboradores(); // Recargar lista
                    } else {
                        alert('Error al eliminar el colaborador');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al eliminar el colaborador');
                }
            }
        }

        // Cargar al inicializar
        document.addEventListener('DOMContentLoaded', loadColaboradores);
    </script>
</body>
</html>