<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/tabulator-tables@5.5.3/dist/js/tabulator.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tabulator-tables@5.5.3/dist/css/tabulator.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex-shrink-0 flex items-center">
                        <span class="text-xl font-bold text-indigo-600">CDF Entrenamiento Elite</span>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a href="/dashboard" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Dashboard
                        </a>
                        <a href="/alumnos" class="border-indigo-500 text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Alumnos
                        </a>
                        <a href="/planes" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Planes
                        </a>
                        <a href="/colaboradores" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
                            Colaboradores
                        </a>
                    </div>
                </div>
                <div class="flex items-center">
                    <a href="/logout" class="ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <div class="border-4 border-dashed border-gray-200 rounded-lg bg-white">
                <% if (locals.success) { %>
                <div class="rounded-md bg-green-50 p-4 mb-4">
                    <div class="text-sm text-green-700">
                        <%= success %>
                    </div>
                </div>
                <% } %>
                <% if (locals.error) { %>
                <div class="rounded-md bg-red-50 p-4 mb-4">
                    <div class="text-sm text-red-700">
                        <%= error %>
                    </div>
                </div>
                <% } %>

                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="mb-4">
                        <div class="flex justify-between items-center">
                            <h1 class="text-2xl font-bold text-gray-900">Alumnos</h1>
                            <a href="/alumnos/add" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Agregar Alumno
                            </a>
                        </div>
                    </div>

                    <div class="bg-white shadow rounded-lg">
                        <div id="alumnos-table"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const table = new Tabulator("#alumnos-table", {
                layout: "fitColumns",
                pagination: "local",
                paginationSize: 10,
                ajaxURL: '/alumnos/api', // Nueva API endpoint
                columns: [
                    {title: "ID", field: "id", width: 80},
                    {title: "Nombre", field: "nombre"},
                    {title: "Apellido", field: "apellido"},
                    {title: "DNI", field: "dni"},
                    {title: "Email", field: "email"},
                    {title: "Teléfono", field: "telefono"},
                    {title: "Fecha Nac.", field: "fecha_nacimiento", formatter: "datetime", formatterParams: {inputFormat: "DD/MM/YYYY", outputFormat: "DD/MM/YYYY"}},
                    {title: "Plan", field: "plan.nombre_plan"},
                    {title: "Vencimiento", field: "fecha_vencimiento_membresia", formatter: "datetime", formatterParams: {inputFormat: "DD/MM/YYYY", outputFormat: "DD/MM/YYYY"}},
                    {title: "Estado", field: "estado_membresia", formatter: function(cell) {
                        const status = cell.getValue();
                        const colors = {
                            'Activa': 'bg-green-100 text-green-800',
                            'Vencida': 'bg-red-100 text-red-800',
                            'Pendiente': 'bg-yellow-100 text-yellow-800'
                        };
                        return `<span class="px-2 py-1 rounded-full ${colors[status] || 'bg-gray-100 text-gray-800'}">${status}</span>`;
                    }},
                    {title: "Acciones", field: "id", formatter: function(cell) {
                        const id = cell.getValue();
                        return `
                            <div class="flex space-x-2">
                                <a href="/alumnos/edit/${id}" class="text-indigo-600 hover:text-indigo-900">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                    </svg>
                                </a>
                                <button onclick="deleteAlumno(${id})" class="text-red-600 hover:text-red-900">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        `;
                    }}
                ]
            });
        });

        async function deleteAlumno(id) {
            if (confirm('¿Estás seguro de que deseas eliminar este alumno?')) {
                try {
                    const response = await fetch(`/alumnos/${id}`, {
                        method: 'DELETE'
                    });
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Error al eliminar el alumno');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al eliminar el alumno');
                }
            }
        }
    </script>
</body>
</html>
